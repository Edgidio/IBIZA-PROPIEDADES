<div style="width:100%; height:100%;" class="bg-dark">
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    
                </div>
                <div class="login-form">
                    <h3 style="text-align: center; margin-top: 30px; margin-bottom: 55px; font-size: xx-large; font-family: fantasy; color: #F3AA08;">IBIZA<span style="color:#0F32A1;"> PROPIEDADES</span></h3>
                    <form action="/admin-ibizapropiedades/login" method="post">
                        
                        <div class="form-group">
                            <label for="usuario">Usuario</label>
                            <input name="usuario"  type="text" class="form-control" placeholder="Ingresa tu usuario">
                            <br>
                            
                            {{#if errors}}
                                {{#each errors}}
                                    {{#eq field "usuario"}}
                                        <div style="color: #721c24; background-color: #f3aa0847; border-color: #f3aa086b;" class="alert alert-danger" role="alert">
                                            {{emssage}}
                                        </div>
                                    {{/eq}}
                                {{/each}}
                            {{/if}}

                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input name="password" type="password" class="form-control" placeholder="Ingrese su contraseña">
                            <br>

                            {{#if errors}}
                                {{#each errors}}
                                    {{#eq field "password"}}
                                        <div style="color: #721c24; background-color: #f3aa0847; border-color: #f3aa086b;" class="alert alert-danger" role="alert">
                                            {{emssage}}
                                        </div>
                                    {{/eq}}
                                {{/each}}
                            {{/if}}
                            
                            {{#if passU}}

                                <div style="color: #721c24; background-color: #f3aa0847; border-color: #f3aa086b;" class="alert alert-danger" role="alert">
                                    {{passU}} 
                                </div>

                            {{/if}}

                        </div>




                        <button type="submit" style="background-color: #0F32A1;" class="btn btn-success btn-flat m-b-30 m-t-30">Iniciar sesión</button>

                        

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
