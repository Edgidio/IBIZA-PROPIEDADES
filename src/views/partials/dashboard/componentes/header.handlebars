<header id="header" class="header">
    <div class="top-left">
        <div class="navbar-header">
            <a class="navbar-brand" href="/admin-ibizapropiedades-dashboard">IBIZA <span style="color:#0F32A1;">PROPIEDADES</span></a>
            <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
            <a id="menuToggle" class="menutoggle"><i class="azul-iconos fa fa-bars"></i></a>
        </div>
    </div>
    <div class="top-right">
        <div class="header-menu">
            <div class="header-left">
                <button class="search-trigger"><i class="azul-iconos fa fa-search"></i></button>
                <div class="form-inline">
                    <form class="search-form">
                        <input class="form-control mr-sm-2" type="text" placeholder="Buscar..." aria-label="Search">
                        <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                    </form>
                </div>

                <div class="dropdown for-notification">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class=" azul-iconos fa fa-bell"></i>
                        <span style="background-color: #F3AA08 !important;" class="count bg-danger">{{N_inicios}}</span>
                    </button>
                    <div class="dropdown-menu" id="notificaciones_inicios" aria-labelledby="notification">
                        <p style="color:#0F32A1;" class="red">Inicios en sistema</p>
                        {{#each Inicios_de_sesiones}}

                        {{#if sesion}}

                        <a class="dropdown-item media" href="#">
                            <i style="color: #28A745;" class="fa fa-check"></i>
                            <p>Inicio de sesion correcto</p>     
                        </a>

                        {{else}}

                        <a class="dropdown-item media" href="#">
                            <i style="color: #DC3545;" class="fa fa-warning"></i>
                            <p>inicio de sesion fallido</p>
                        </a>

                        {{/if}}

                        {{/each}}

                    </div>
                </div>

                <div class="dropdown for-message">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="notification-correo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="azul-iconos fa fa-envelope"></i>
                        <span style="background-color: #F3AA08 !important;" id="count-correo" class="count bg-primary">{{N_correos}}</span>
                    </button>
                    <div style=" max-height: 500px; overflow-y: auto;" id="array_correos" class="dropdown-menu" aria-labelledby="message">
                        <p style="color: #0F32A1;" class="red">Tienes {{N_correos}} correos</p>

                        

                        {{#if Correos}}
                            {{#each Correos}}
                                <a class="dropdown-item media" href="#">
                                    <span class="photo media-left"><i class="azul-iconos fa fa-envelope"></i></span>
                                    <div class="message media-body">
                                        <span class="name float-left">{{nombre}}</span>
                                        <span class="time float-right">{{createdAt}}</span>
                                        <p>{{mensaje}}</p>
                                    </div>
                                    
                                </a>
                            {{/each}}
                        {{else}}


                        {{/if}}

                        



                    </div>
                </div>
            </div>

            <div class="user-area dropdown float-right">
                <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i style="font-size:xx-large; color: #0F32A1;" class="fa fa-user"></i>
                </a>

                <div class="user-menu dropdown-menu">
                    <a style="color: #0F32A1;" class="nav-link" href="/admin-ibizapropiedades/logout"><i class="fa fa-power -off"></i>Cerrar sesi√≥n</a>
                </div>
            </div>

        </div>
    </div>
</header>
