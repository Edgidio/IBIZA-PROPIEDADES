<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/hero_bg_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      
      {{#if correo_enviado}}
        <div class="custom-alert">
          <span class="close-btn" onclick="cerrarAlerta()">&times;</span>
            {{t.contact.email_sent}}
        </div>
        <script>
            function cerrarAlerta() {
              var alerta = document.querySelector('.custom-alert');
              alerta.style.animation = 'slideOut 0.5s forwards';

              setTimeout(function() {
                alerta.style.display = 'none';
              }, 500);
            }

            setTimeout(function() {
              cerrarAlerta();
            }, 10000); // Cerrar después de 4 segundos
        </script>
      {{/if}}

      {{#if correo_no_enviado}}
        <div style="background-color: #f30808;" class="custom-alert">
          <span class="close-btn" onclick="cerrarAlerta()">&times;</span>
            {{t.contact.email_not_sent}}
        </div>
        <script>
            function cerrarAlerta() {
              var alerta = document.querySelector('.custom-alert');
              alerta.style.animation = 'slideOut 0.5s forwards';

              setTimeout(function() {
                alerta.style.display = 'none';
              }, 500);
            }

            setTimeout(function() {
              cerrarAlerta();
            }, 10000); // Cerrar después de 4 segundos
        </script>
      {{/if}}
      
      <div id="contacto" class="col-md-10">
        <h1 class="mb-2">{{t.contact.title}}</h1>
      </div>
    </div>
  </div>
</div>



<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-8 mb-5">
        <form action="/contacto" method="post" class="p-5 bg-white border">

          <div class="row form-group">
            <div class="col-md-12 mb-3 mb-md-0">
              <label class="font-weight-bold" for="nombre">{{t.contact_section.form.name}}</label>
              <input {{#if errors}}{{#each errors}}{{#eq field "nombre"}} style=" border-color: #f30808 !important;" {{/eq}}{{/each}}{{/if}} {{#if datos_formulario}}value="{{datos_formulario.nombre}}"{{/if}} type="text" id="nombre" name="nombre" class="form-control" placeholder="{{t.contact_section.form.name}}">

              {{#if errors}}
                {{#each errors}}
                  {{#eq field "nombre"}}
                    <br>
                    <div id="alerta" class="alert">
                      <strong>{{message}}</strong>
                    </div>
                  {{/eq}}
                {{/each}}
              {{/if}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12 mb-3 mb-md-0">
              <label class="font-weight-bold" for="telefono">{{t.contact_section.form.phone}}</label>
              <input {{#if errors}}{{#each errors}}{{#eq field "telefono"}} style=" border-color: #f30808 !important;" {{/eq}}{{/each}}{{/if}} {{#if datos_formulario}}value="{{datos_formulario.telefono}}"{{/if}} type="text" id="telefono" name="telefono" class="form-control" placeholder="{{t.contact_section.form.phone}}">

              {{#if errors}}
                {{#each errors}}
                  {{#eq field "telefono"}}
                    <br>
                    <div id="alerta" class="alert">
                      <strong>{{message}}</strong>
                    </div>
                  {{/eq}}
                {{/each}}
              {{/if}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="font-weight-bold" for="correo">{{t.contact_section.form.email}}</label>
              <input {{#if errors}}{{#each errors}}{{#eq field "correo"}} style=" border-color: #f30808 !important;" {{/eq}}{{/each}}{{/if}} {{#if datos_formulario}}value="{{datos_formulario.correo}}"{{/if}} name="correo" type="email" id="correo" class="form-control" placeholder="{{t.contact_section.form.email}}">

              {{#if errors}}
                {{#each errors}}
                  {{#eq field "correo"}}
                    <br>
                    <div id="alerta" class="alert">
                      {{#eq message '"correo" is not allowed'}}
                        {{t.contact_section.form.email_required}}
                      {{else}}
                        <strong>{{message}}</strong>
                      {{/eq}}
                    </div>
                  {{/eq}}
                {{/each}}
              {{/if}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="font-weight-bold" for="asunto">{{t.contact_section.form.subject}}</label>
              <input {{#if errors}}{{#each errors}}{{#eq field "asunto"}} style=" border-color: #f30808 !important;" {{/eq}}{{/each}}{{/if}} {{#if datos_formulario}}value="{{datos_formulario.asunto}}"{{/if}} type="text" id="asunto" name="asunto" class="form-control" placeholder="{{t.contact_section.form.subject}}">

              {{#if errors}}
                {{#each errors}}
                  {{#eq field "asunto"}}
                    <br>
                    <div id="alerta" class="alert">
                      <strong>{{message}}</strong>
                    </div>
                  {{/eq}}
                {{/each}}
              {{/if}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <label class="font-weight-bold" for="mensaje">{{t.contact_section.form.message}}</label>
              <textarea {{#if errors}}{{#each errors}}{{#eq field "mensaje"}} style=" border-color: #f30808 !important;" {{/eq}}{{/each}}{{/if}} name="mensaje" id="mensaje" cols="30" rows="5" class="form-control" placeholder="{{t.contact_section.form.message}}">{{#if datos_formulario}}{{datos_formulario.mensaje}}{{/if}}</textarea>

              {{#if errors}}
                {{#each errors}}
                  {{#eq field "mensaje"}}
                    <br>
                    <div id="alerta" class="alert">
                      <strong>{{message}}</strong>
                    </div>
                  {{/eq}}
                {{/each}}
              {{/if}}
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <input type="submit" value="{{t.contact_section.form.send}}" class="btn btn-primary py-2 px-4 rounded-0">
            </div>
          </div>

        </form>
      </div>

      <div class="col-lg-4">
        <div class="p-4 mb-3 bg-white">
          <h3 class="h6 text-black mb-3 text-uppercase">{{t.contact_section.contact_info.contact_details}}</h3>
