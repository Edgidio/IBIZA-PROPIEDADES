      {{#each propiedadesConUnaRutaPorFoto}}
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="property-entry h-100">
          <a href="/propiedad/{{id}}" class="property-thumbnail">
            <div class="offer-type-wrap">
              {{#eq venta_renta "V"}}<span class="offer-type bg-amarillo">{{@root.t.property_.sale}}</span>{{/eq}}
              {{#eq venta_renta "R"}}<span class="offer-type bg-success">{{@root.t.property_.rent}}</span>{{/eq}}
            </div>

            <img loading="lazy" src="/images/uploads/propiedades/medium/{{rutas}}" alt="Image" class="img-fluid">
          </a>
          <div class="p-4 property-body">

            <a class="share-btn property-favorite">
              <i class="fas fa-share-alt"></i>
            </a>

            <div class="share-options">
              <p class="title">{{@root.t.property_.share}}</p>
              <div class="social-media">

                <button onclick="compartirWhatsApp_{{id}}()" style="background-color:#25D366" class="social-media-btn"><i class="fab fa-whatsapp"></i></button>
                <button onclick="compartirTwitter_{{id}}()" style="background-color: #1DA1F2;" class="social-media-btn"><i class="fab fa-twitter"></i></button>
                <button onclick="compartirFacebook_{{id}}()" style="background-color: #1877F2;" class="social-media-btn"><i class="fab fa-facebook-f"></i></button>

                <script>
                  function compartirWhatsApp_{{id}}() {
                    var url = encodeURIComponent("https://ibizapropiedades.com.ve/propiedad/{{id}}");
                    window.open('whatsapp://send?text=' + url);
                  }

                  function compartirTwitter_{{id}}() {
                    var url = encodeURIComponent("https://ibizapropiedades.com.ve/propiedad/{{id}}");
                    var texto = encodeURIComponent("{{t.property_.twitterText}}");
                    window.location.href = 'https://twitter.com/intent/tweet?url=' + url + '&text=' + texto;
                  }

                  function compartirFacebook_{{id}}() {
                    var url = encodeURIComponent("https://ibizapropiedades.com.ve/propiedad/{{id}}");
                    window.open('https://www.facebook.com/sharer/sharer.php?u=' + url);
                  }
                </script>
              </div>
              <div class="link-container">
                <input style="border: none;" class="link" type="text" value="https://ibizapropiedades.com.ve/propiedad/{{id}}">
                <button class="copy-btn">{{@root.t.property_.copyLink}}</button>
              </div>
            </div>

            <h2 class="property-title"><a href="/propiedad/{{id}}">{{descripcion}}</a></h2>
            <span class="property-location d-block mb-3"><span class="property-icon icon-room"></span>{{estado}}</span>
            <strong class="property-price text-primary mb-3 d-block text-success">$ {{formatNumber precio}}</strong>
            <ul class="property-specs-wrap mb-3 mb-lg-0">

              {{#if n_habitaciones}}
              <li>
                <span class="property-specs">{{@root.t.property_.rooms}}</span>
                <span class="property-specs-number">{{n_habitaciones}} <sup>+</sup></span>
              </li>
              {{/if}}

              {{#if n_banos}}
              <li>
                <span class="property-specs">{{@root.t.property_.bathrooms}}</span>
                <span class="property-specs-number">{{n_banos}}</span>
              </li>
              {{/if}}

              {{#if superficie}}
              <li>
                <span class="property-specs">{{@root.t.property_.surface}}</span>
                <span class="property-specs-number">{{formatNumber superficie}} m<sup>2</sup></span>
              </li>
              {{/if}}

              {{#if terreno}}
              <li>
                <span class="property-specs">{{@root.t.property_.land}}</span>
                <span class="property-specs-number">{{formatNumber terreno}} m<sup>2</sup></span>
              </li>
              {{/if}}
            </ul>

          </div>
        </div>
      </div>
      {{/each}}

    </div>

    {{else}}

