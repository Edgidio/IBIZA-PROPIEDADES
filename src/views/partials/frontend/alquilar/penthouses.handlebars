<script>

    const copyBtns = document.querySelectorAll('.copy-btn');

    copyBtns.forEach(copyBtn => {
        copyBtn.addEventListener('click', () => {
            const input = copyBtn.previousElementSibling;
            input.select();
            document.execCommand('copy');
            
            // Agregar clase para cambiar el color de fondo a verde
            copyBtn.classList.add('copied');
        });
    });


    const shareBtns = document.querySelectorAll('.share-btn');

    shareBtns.forEach(shareBtn => {
        shareBtn.addEventListener('click', () => {
            const shareOptions = shareBtn.nextElementSibling;
            shareOptions.classList.toggle('active');
        });
    });


    document.addEventListener("DOMContentLoaded", function() {
        // Espera 500 milisegundos antes de desplazarte hacia la sección "busqueda"
        setTimeout(function() {
            document.getElementById("sobre-nosotros").scrollIntoView({ behavior: "smooth" });
        }, 100);
    });
</script>

